			},
	        async : false,
			dataType : 'json',
			success : function(data, textStatus, httpRequest) {
				
				var hasUser = data.hasUser;
				var user = data.user;
				var flag = data.flag;
				if(flag==false&&hasUser==false){
					alert('账号不存在');
				}else if(flag==false&&hasUser==true){
