              vdbidName(document.form1.dbid.value,'<%=id%>');
   		 }
        	}
        	function adddianbiao(){
        		if(confirm("您将要修改电表信息！确认信息正确！")){
							document.form1.action=path+"/servlet/dianbiao?action=modifydianbiao"
							document.form1.submit()
            }
