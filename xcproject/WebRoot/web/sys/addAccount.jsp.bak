                        		return;
                        }
                        /*
                      	var phone=/^\d{11}$/;
        								if(!phone.exec(document.form1.mobile.value)){
                						alert("手机号码应为11位数字！");
                						document.form1.mobile.focus();
                						return ;
        								}*/

                     	if(document.form1.role.value==""){
                         	alert("请选择角色！");
                                 return
                     	}
                     	if(document.form1.sheng.value=="0"){
                         	alert("请选择省！");
                                 return
                     	}
                     	if(document.form1.shi.value=="0"){
                         	alert("请选择市！");
                                 return
                     	}

