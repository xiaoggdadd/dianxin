	function saveAccount(){
	

          	if(checkNotnull(document.form1.accountName,"账号")&&
                   checkNotnull(document.form1.name,"姓名")){
                     

                      	
                      	if(document.form1.accountName.value.length<3||document.form1.accountName.value.length >12){
